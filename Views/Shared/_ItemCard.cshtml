@model LAF.Models.Item

<div class="card mb-4">
    <div class="card-body">
        @if (!string.IsNullOrEmpty(Model.ImagePath))
        {
            <img src="~/uploads/@Model.ImagePath" alt="@Model.Name" class="card-img-top img-fluid" />
        }
        <h5 class="card-title">@Model.Name</h5>
        <p class="card-text">
            @(Model.IsLost ? $"{Model.User?.FullName ?? "Unknown User"} lost this item." : $"{Model.User?.FullName ?? "Unknown User"} found this item.")
        </p>
        <p class="card-text">
            <strong>Location:</strong> @Model.Location<br />
            <strong>Date:</strong> @Model.Date.ToShortDateString()
        </p>
        <a href="@Url.Action("Details", "Items", new { id = Model.Id })" class="btn btn-info w-100">View Details</a>
    </div>
</div>