@model IEnumerable<LostandFound.Models.LostItem>

@{
    ViewData["Title"] = "Lost Items";
}

<div class="container">
    <section class="items-list">
        <h2>Lost Items</h2>
        <div class="items-grid">
            @if (Model.Any())
            {
                foreach (var item in Model)
                {
                    <div class="item-card">
                        <img src="@item.ImageUrl" alt="@item.ItemName" style="width: 100%; height: 200px; object-fit: cover;" />
                        <h3>@item.ItemName</h3>
                        <p><strong>Category:</strong> @item.Category</p>
                        <p><strong>Description:</strong> @item.Description</p>
                        <p><strong>Location:</strong> @item.Location</p>
                        <p><strong>Contact:</strong> @item.ContactDetails</p>
                    </div>
                }
            }
            else
            {
                <p>No lost items found.</p>
            }
        </div>
    </section>
</div>