<!-- Views/Item/ViewLostItem.cshtml -->
@model LostandFound.Models.LostItem

@{
    ViewData["Title"] = "Lost Item Details";
}

<div class="container">
    <div class="card mt-4">
        <div class="card-header bg-danger text-white">
            <h2>Lost Item Details</h2>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                    {
                        <img src="@Model.ImageUrl" alt="@Model.ItemName" class="img-fluid rounded" style="max-height: 300px;" />
                    }
                    else
                    {
                        <img src="/images/no-image.png" alt="No image available" class="img-fluid rounded" />
                    }
                </div>
                <div class="col-md-6">
                    <h3 class="mb-3">@Model.ItemName</h3>
                    <p><strong>Category:</strong> <span class="badge bg-info">@Model.Category</span></p>
                    <p><strong>Description:</strong> @Model.Description</p>
                    <p><strong>Location:</strong> @Model.Location</p>
                    <p><strong>Contact:</strong> @Model.ContactDetails</p>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <a asp-action="SeeLostListings" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
</div>
